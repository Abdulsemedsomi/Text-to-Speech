<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sbc"
    tools:context="com.somiman73gmail.speech.MainActivity"
    style="@style/Base.Animation.AppCompat.DropDownUp">


    <EditText
        android:shadowColor="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Text"
        android:background="?attr/colorButtonNormal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/news"
        android:id="@+id/buk"
        style="?android:attr/listPopupWindowStyle"
        tools:style="@android:style/MediaButton.Rew"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/txt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/newk"
        android:id="@+id/bus"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignTop="@+id/buk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
